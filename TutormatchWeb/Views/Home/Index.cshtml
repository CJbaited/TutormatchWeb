@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <h1 class="display-4 mb-4">Find Your Perfect Tutor in minutes!</h1>
                <p class="lead mb-4">Connect with experienced tutors who can help you achieve your learning goals. Personalized learning experience tailored to your needs.</p>
                <div class="hero-buttons">
                    <a href="/signup" class="btn btn-light btn-lg mr-3">Get Started</a>
                    <a href="#how-it-works" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <img src="~/images/hero-image.png" alt="Tutor matching" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section">
    <div class="container">
        <div class="feature-container">
            <div class="feature-info" data-aos="fade-right">
                <h2 class="mb-4">Find Your Perfect Match</h2>
                <div class="feature-list">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <p>Smart matching algorithm based on your learning style</p>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <p>Verified tutors with proven experience</p>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <p>Flexible scheduling that fits your timeline</p>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <p>Direct messaging and virtual classroom integration</p>
                    </div>
                </div>
            </div>
            <div class="feature-image" data-aos="fade-left">
                <img src="~/images/feature-image.png" alt="Tutoring Features" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<section id="features" class="features-section2">
    <div class="container">
        <div class="feature-container">
            <div class="feature-image" data-aos="fade-right">
                <img src="~/images/feature-image.png" alt="Tutoring Features" class="img-fluid">
            </div>
            <div class="feature-info" data-aos="fade-left">
                <h2 class="mb-4">Find Your Perfect Match</h2>
                <div class="feature-list">
                    <div class="feature-item">
